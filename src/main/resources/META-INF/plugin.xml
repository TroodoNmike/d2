<!-- Plugin Configuration File: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN, cannot be changed between the plugin versions. -->
    <id>com.troodon.d2</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>D2 Diagram</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://github.com/TroodoNmike">TroodoN</vendor>

    <!-- Description is now generated from README.md via build.gradle.kts -->

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extensions defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="D2"
                language="D2"
                extensions="d2"
                implementationClass="com.troodon.d2.lang.D2FileType"/>
        <lang.parserDefinition
                language="D2"
                implementationClass="com.troodon.d2.lang.D2ParserDefinition"/>
        <syntaxHighlighter
                key="D2"
                implementationClass="com.troodon.d2.editor.D2SyntaxHighlighter"/>
        <lang.braceMatcher
                language="D2"
                implementationClass="com.troodon.d2.editor.D2PairedBraceMatcher"/>
        <lang.commenter
                language="D2"
                implementationClass="com.troodon.d2.editor.D2Commenter"/>
        <langCodeStyleSettingsProvider
                implementation="com.troodon.d2.settings.D2LanguageCodeStyleSettingsProvider"/>
        <colorSettingsPage
                implementation="com.troodon.d2.settings.D2ColorSettingsPage"/>
        <fileEditorProvider
                implementation="com.troodon.d2.preview.D2SplitEditorProvider"/>
        <projectConfigurable
                parentId="tools"
                instance="com.troodon.d2.settings.D2SettingsConfigurable"
                id="com.troodon.d2.settings"
                displayName="D2 Diagram"/>
        <completion.contributor
                language="D2"
                implementationClass="com.troodon.d2.editor.D2CompletionContributor"/>
    </extensions>
</idea-plugin>